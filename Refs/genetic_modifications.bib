pages = {820--831},
title = {{Refactoring and optimization of light-switchable Escherichia coli two-component systems}},
url = {http://pubs.acs.org/doi/abs/10.1021/sb500273n},
volume = {3},
year = {2014}
}
@article{Schwarz-Linek2016,
