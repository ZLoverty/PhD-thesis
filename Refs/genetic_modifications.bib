journal = {Science},
mendeley-groups = {Light-control/Proteorhodopsin,Light-control/Proteorhodopsin/Discovery},
number = {5486},
pages = {1902--1906},
pmid = {10988064},
title = {{Bacterial rhodopsin: Evidence for a new type of phototrophy in the sea}},
