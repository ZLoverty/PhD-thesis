keywords = {Active fluids,Self-organization,Turbulence},
mendeley-groups = {Active fluids/Collective motions/theory},
number = {49},
pages = {15048--15053},
pmid = {26598708},
title = {{New class of turbulence in active fluids}},
url = {http://www.pnas.org/lookup/doi/10.1073/pnas.1509304112},
