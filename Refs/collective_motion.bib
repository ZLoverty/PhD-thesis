eprint = {1311.2017},
file = {:C$\backslash$:/Users/liuzy/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Bricard et al. - 2013 - Emergence of macroscopic directed motion in populations of motile colloids.pdf:pdf},
issn = {00280836},
journal = {Nature},
mendeley-groups = {Active fluids/Collective motions/experiment},
number = {7474},
